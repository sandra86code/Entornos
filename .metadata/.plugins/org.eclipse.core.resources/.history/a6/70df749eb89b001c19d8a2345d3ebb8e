package com.test.refactoring.main;

import java.util.Scanner;

import com.test.refactoring.business.Camion;
import com.test.refactoring.business.Coche;
import com.test.refactoring.business.Vehiculo;
import com.test.refactoring.utils.Utils;

public class MenuApp {
	
	static Scanner sc = new Scanner(System.in);
	
	public static void main(String[] args) {
		
		
		mostrarPresentacion();
		
		mensajeUsuario();
		

		int numCoches= leerEntero("Introduce el número de coches : ");
		Coche[] listaCoches = new Coche[numCoches];
		for (int i=0; i<numCoches; i++) {
			listaCoches[i] = new Coche();
			listaCoches[i].acelerar(80);
		}
		
		int numCamiones= leerEntero("Introduce el número de camiones : ");
		Vehiculo[] listaCamiones = new Vehiculo[numCamiones];
		for (int i=0; i<numCamiones; i++) {
			listaCamiones[i] = new Camion();
			listaCamiones[i].acelerar(20);
		}
		
		detenerVehiculos(listaCoches);
		detenerVehiculos(listaCamiones);
		
		sc.close();
		
	}
	
	
	private static Coche pideDatosVehiculo(String tipoVehiculo) {
		String matricula = leerCadena("Introduce la matrícula: ");
		String color = leerCadena("Introduce el color: ");
		String combustible = leerCadena("Introduce el combustible: ");
		String nombreConductor = leerCadena("Introduce el nombre del conductor: ");
		String dniConductor = leerCadena("Introduce el DNI del conductor: ");
		if(tipoVehiculo.equals("coche")) {
			int numCamiones= leerEntero("Introduce el número de plazas : ");
			return new Coche(matricula, color, combustible, nombreConductor, dniConductor,tipoVehiculo);
		}
	}
	
	private static void mostrarPresentacion () {
		System.out.println("/*******************************************************************************/"
						+"/***                                                                         ***/"
						+"/***     VAMOS A REFACTORIZAR...HAY QUE ELIMINAR LOS MALOR OLORES YA!!       ***/"
						+"/***                                                                         ***/"
						+"/*******************************************************************************/");
	}
	
	private static void mensajeUsuario() {
		System.out.println("Introduce tu nombre: ");
		String nombre = sc.nextLine();
		System.out.println("Introduce tu primer apellido: ");
		String primerApellido = sc.nextLine();

		System.out.println("/*******************************************************************************/"
				+"/***                                                                         ***/"
				+ "/*** BIENVENIDO/A " + nombre + " " + primerApellido
				+ "/*** " + Utils.fecha_actual() 
				+ "/*** " + Utils.hora_actual() 
				+"/***                                                                         ***/"
				+"/*******************************************************************************/");
	}

	private static void detenerVehiculos(Coche[] listaCoches) {
		for (int i=0; i<listaCoches.length; i++) {
			listaCoches[i].detener();
		}
	}

	private static void detenerVehiculos(Vehiculo[] listaCamiones) {
		for (int i=0; i<listaCamiones.length; i++) {
			listaCamiones[i].detener();
		}
	}


	public static String leerCadena(String texto) {
		System.out.println(texto);
		return sc.nextLine();
	}

	public static int leerEntero(String texto) {
		System.out.println(texto);
		return Integer.parseInt(sc.nextLine());
	}

}
